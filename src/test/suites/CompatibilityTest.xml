<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Fayda Smoke Suite" parallel="tests">
    <test name="Fayda Smoke Test" parallel="classes">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.fayda.tests.PlaceOrderTest"/>
            <class name="com.fayda.tests.LogoutTest"/>
        </classes>
    </test>
    <test name="Fayda Smoke Test Firefox" parallel="classes">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.fayda.tests.PlaceOrderTest"/>
            <class name="com.fayda.tests.LogoutTest"/>
        </classes>
    </test>
</suite>